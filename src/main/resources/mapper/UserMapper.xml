<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.board_was.mapper.UserMapper">
    <select id="getCheckId" parameterType="String" resultType="com.example.board_was.model.User">
        SELECT *
        FROM user_info
        WHERE user_id = #{userId}
    </select>

    <insert id="createUser" parameterType="User">
        INSERT INTO user_info (user_id, user_pw, user_email, user_nn, create_dtm)
        VALUES (
            #{user_id},
            #{user_pw},
            #{user_email},
            #{user_nn},
            DATE_FORMAT(NOW(), '%Y%m%d%H%i%S')
        )
    </insert>

</mapper>